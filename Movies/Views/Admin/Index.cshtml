@model IEnumerable<Movies.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}

<h2 class="mb-4">Movies List 🎬</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add Movie</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Type</th>
            <th>Poster</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@movie.Type</td>
                <td>
                    @if (!string.IsNullOrEmpty(movie.PosterUrl))
                    {
                        <img src="@movie.PosterUrl" alt="Poster" class="img-thumbnail" style="max-height:100px;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
